defaults
logfile <path to logfile>
tls on
tls_trust_file <path to crt file probably in etc>

account <name of account>
from <gmail user>@gmail.com
host smtp.gmail.com
port 587
auth login
user <gmail user>
password <gmail password>

account <second account> :<name of first account>
from <gmail user>@gmail.com
user <gmail user>
password <gmail password>

account <work mail>
from <work user>@<work domain>
host <work smtp host>
port 587
auth on
user <work user>@<work domain>
password <work password>
